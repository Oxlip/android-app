<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
           <item name="android:actionMenuTextColor">@color/foreground</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat">
        <item name="android:background">@color/background</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>
    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="topbar_title_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="topbar_descriptive_text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dd_cs_value_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/text_0</item>
    </style>
    <style name="dd_cs_desc_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
