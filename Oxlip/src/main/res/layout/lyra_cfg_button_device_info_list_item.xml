<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lyra_cfg_button_device_info_list_item_image"
        android:src="@drawable/ic_icon_socket"
        android:scaleType="fitCenter"
        app:riv_corner_radius="20dip"
        app:riv_border_width="1dip"
        app:riv_mutate_background="true"
        app:riv_border_color="@android:color/darker_gray"
        app:riv_tile_mode="clamp"
        app:riv_oval="false"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        android:layout_marginStart="10dip"
        android:layout_marginEnd="10dip"/>

    <TextView
        android:id="@+id/lyra_cfg_button_device_info_list_item_text"
        android:text="@string/text_na"
        android:textSize="12sp"
        android:textColor="@color/secondary_text_default_material_light"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>